{
  "parserOptions": {
    "sourceType": "script"
  },

  "plugins": [ "eslint-plugin-html" ],

  "env": {
    "browser": true,
    "node": false,
    "jquery": true
  },

  "globals": {
    "boadApp": true,
    "Dice": false,
    "favorites": false,
    "Framework7": false,
    "_getLocalStorage": false,
    "keypad": false,
    "rollHistory": false
  },

  "exported": [ "Dice", "keypad" ],

  "extends": "airbnb-base",

  "rules": {
    "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ],
    "comma-dangle": [ 2, { "functions": "never" } ],
    "func-names": [ 1, "as-needed" ],
    "linebreak-style": [ 2, "windows" ],
    "max-len": [ 2, 132 ],
    "no-plusplus": [ 2, { "allowForLoopAfterthoughts": true } ],
    "no-restricted-syntax": [ 2, "ForOfStatement" ],
    "no-underscore-dangle": 0,
    "no-unused-vars": [ 2, { "varsIgnorePattern": "keypad|rollHistory" } ],
    "prefer-arrow-callback": [ 2, { "allowNamedFunctions": true } ],
    "strict": [ 2, "global" ]
  }
}
